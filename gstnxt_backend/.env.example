# GSTnxt Backend Configuration
DEBUG=True
SECRET_KEY=gstnxt-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gstnxt_db
DATABASE_ECHO=False

# JWT Configuration
JWT_SECRET_KEY=gstnxt-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50000000  # 50MB
ALLOWED_EXTENSIONS=.xlsx,.xls,.zip

# Analysis Configuration
OUTPUT_DIR=outputs
TEMP_DIR=temp

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://gstnxt.slantaxiom.com"]
